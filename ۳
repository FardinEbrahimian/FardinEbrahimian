const optionItems = document.querySelectorAll(".option-item");

optionItems.forEach((item) => {
  item.addEventListener("click", function () {
    optionItems.forEach((opt) => (opt.style.backgroundColor = ""));
    this.style.backgroundColor = "#3B82F6";
  });
});



const buttons = document.querySelectorAll(".delivery-day");

buttons.forEach((button) => {
  button.addEventListener("click", () => {
    buttons.forEach((btn) => {
      btn.classList.remove("bg-primary", "text-white", "border-0");
      btn.classList.add("bg-transparent", "border", "border-dark-subtle");
    });

    button.classList.remove("bg-transparent", "border-dark-subtle");
    button.classList.add("bg-primary", "text-white", "border-0");
  });
});




const plusBtn = document.getElementById("plusBtn");
const minusBtn = document.getElementById("minusBtn");
const quantityEl = document.getElementById("quantity");
const totalPriceEl = document.getElementById("totalPrice");
const finalPriceEl = document.getElementById("finalPrice");

let quantity = 1;
const unitPrice = 17800000;
const discountPerItem = 280000;

function updatePrices() {
  const totalPrice = unitPrice * quantity;
  const totalDiscount = discountPerItem * quantity;
  const finalPrice = totalPrice - totalDiscount;

  totalPriceEl.textContent =
    new Intl.NumberFormat("fa-IR").format(totalPrice) + " تومان";

  finalPriceEl.textContent = new Intl.NumberFormat("fa-IR").format(finalPrice);
}

plusBtn.addEventListener("click", () => {
  quantity++;
  quantityEl.textContent = quantity;
  updatePrices();
});

minusBtn.addEventListener("click", () => {
  if (quantity > 1) {
    quantity--;
    quantityEl.textContent = quantity;
    updatePrices();
  }
});

updatePrices();
